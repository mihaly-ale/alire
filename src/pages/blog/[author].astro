---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import pageMotif from '../../../public/logos/motif-dark.svg';
import '../../styles/secondary-page.css';

export async function getStaticPaths() {
	const blogEntries = await getCollection('blog');

	return blogEntries.map((entry) => ({
		params: { author: entry.data.author },
		props: { author: entry.data.author, blogEntries },
	}));
}

const { author, blogEntries } = Astro.props;

const filteredPosts = blogEntries.filter(
	(entry) => entry.data.author === author
);
---

<Layout
	title=`Entradas de ${author}`
	headline=`Entradas de ${author}`
	showHero={false}
	heroShrunk={true}
	isSecondaryPage={true}>
	<main class="secondary-page-content">
		<section>
			<ul>
				{
					filteredPosts.map((post) => (
						<li>
							<article class="container">
								<h2 class="blog-title">
									<a href={`/blog/${post.slug}`}>{post.data.title}</a>
								</h2>

								<p>
									{new Date(post.data.publishedDate).toLocaleDateString(
										'es-ES',
										{
											year: 'numeric',
											month: 'long',
											day: 'numeric',
										}
									)}
								</p>

								<p class="blog-excerpt">{post.body.split('##')[0]}</p>

								<ul class="categories margin-extra">
									{post.data.categories.map((category) => (
										<li>
											<a href={`/blog/${category}`} class="category">
												{category}
											</a>
										</li>
									))}
								</ul>

								<a class="btn btn-secondary" href={`/blog/${post.slug}`}>
									Saber m√°s
								</a>

								<Image src={pageMotif} alt="" width="24" height="24" />
							</article>
						</li>
					))
				}
			</ul>
		</section>
	</main>
</Layout>
