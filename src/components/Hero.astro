---
interface Props {
	headline: string;
	tagline: string;
}

const { headline, tagline } = Astro.props;
---

<section class="hero-section">
	<h1 class="headline">{headline}</h1>
	<p class="tagline">{tagline}</p>
	<a href="/" class="btn btn-cta">MimaTe</a>
</section>

<style>
	.hero-section {
		min-height: 85vh;
		background-image: linear-gradient(
				var(--clr-transparent-50),
				var(--clr-transparent-50)
			),
			url(/images/hero-1600x1067.avif);
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center;

		color: var(--clr-accent-100);

		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.headline,
	.tagline {
		margin-block-start: 0;
		margin-inline: 0;
		text-align: center;
	}

	.headline,
	.btn-cta {
		font-family: Laisha;
		font-feature-settings: 'salt' 1;
	}

	.headline {
		font-size: var(--fs-phone-h1);
		font-weight: var(--fw-200);
		line-height: 1;
		margin-block-end: 0.23em;
	}

	.tagline {
		font-size: var(--fs-phone-h2);
		max-width: 22ch;
		line-height: 1.3;
	}

	a[class~='btn'] {
		text-decoration: none;
		border-radius: 0.25em;
	}

	.btn {
		padding: var(--em-spacing-50) var(--em-spacing-125);
		cursor: pointer;
		border: 1px solid currentColor;
	}

	.btn-cta {
		font-size: var(--fs-phone-h3);
		color: var(--clr-primary-200);
		background-color: var(--clr-transparent-50);
		letter-spacing: 2px;
		transition: all 250ms;

		&:hover {
			background-color: var(--bg-color);
			color: var(--text-color);
		}

		&:active {
			opacity: 0.75;
		}
	}
</style>
