---
interface Props {
	headline: string;
	tagline: string;
}

const { headline, tagline } = Astro.props;
---

<section class="hero-section">
	<h1 class="headline">{headline}</h1>
	<p class="tagline">{tagline}</p>
	<a href="/" class="btn btn-cta">MimaTe</a>
</section>

<style>
	.hero-section {
		min-height: 85vh;
		background-color: var(--clr-tertiary-400);
		background-image: linear-gradient(
				var(--clr-transparent-50),
				var(--clr-transparent-50)
			),
			image-set(
				url(/images/hero-medium.avif) type('image/webp'),
				url(/images/hero-medium.webp) type('image/avif'),
				url(/images/hero-medium.jpg) type('image/jpg')
			);
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center;

		color: var(--clr-tertiary-100);

		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;

		flex: 1;
		padding-block-start: min(8vw, 200px);
	}

	@media screen and (min-width: 62.5em) {
		.hero-section {
			background-color: var(--clr-tertiary-400);
			background-image: linear-gradient(
					var(--clr-transparent-50),
					var(--clr-transparent-50)
				),
				image-set(
					url(/images/hero-medium.avif) type('image/webp'),
					url(/images/hero-medium.webp) type('image/avif'),
					url(/images/hero-medium.jpg) type('image/jpg')
				);
		}
	}

	.headline,
	.tagline {
		margin-block-start: 0;
		margin-inline: 0;
		text-align: center;
		color: var(--bg-color);
	}

	.headline {
		font-family: Laisha;
		font-feature-settings: 'salt' 1;
	}

	.headline {
		font-size: clamp(var(--fs-phone-h1), 13.4vw, var(--fs-desktop-h1));

		font-weight: var(--fw-200);
		line-height: 1;
		margin-block-end: 0.23em;
	}

	.tagline {
		font-size: clamp(var(--fs-phone-h3), 3vw, var(--fs-desktop-tagline));
		font-family: Merienda;
		max-width: 22ch;
		line-height: 1.3;
	}

	:global(.btn) {
		display: block;
		padding: var(--em-spacing-50) var(--em-spacing-125);
		border-radius: var(--rad-25);
		border: 1px solid currentColor;
		cursor: pointer;
		transition: all 250ms;
		text-decoration: none;
	}

	.btn-cta {
		font-size: clamp(var(--fs-phone-h4), 2vw, var(--fs-desktop-h3));
		color: var(--clr-primary-200);
		background-color: var(--clr-transparent-50);
		letter-spacing: 2px;
		border-width: 4px;

		&:hover {
			background-color: var(--bg-color);
			color: var(--text-color);
		}

		&:active {
			opacity: 0.75;
		}
	}
</style>
