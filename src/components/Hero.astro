---
// component import
import { Image } from 'astro:assets';

// assets import
import heroImage from '../assets/hero-image.jpg';
const { headline, tagline } = Astro.props;
---

<section class="hero-section">
	<h1 class="headline">{headline}</h1>

	<Image
		src={heroImage}
		alt=""
		aria-hidden="true"
		widths={[800, 1200, 1600, 2000, 3000]}
		sizes={`(max-width: 800px) 800px, (max-width: 1200px) 1200px, (max-width: 1600px) 1600px, (max-width:2000px) 2000px, (min-width: 2001px) 3000px`}
		decoding="async"
		quality="70"
		loading="eager"
		class="background-image hero-image"
	/>

	<p class="tagline">{tagline}</p>
	<a href="#contacto" class="btn btn-cta">MimaTe</a>
</section>

<style>
	.hero-section {
		min-height: 100vh;

		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.headline,
	.tagline {
		margin-block-start: 0;
		margin-inline: 0;
		text-align: center;
		color: var(--bg-color);
	}

	.headline {
		font-family: Laisha;
		font-feature-settings: 'salt' 1;
		font-size: clamp(var(--fs-phone-h1), 10vw, var(--fs-desktop-h1));
		font-weight: var(--fw-200);
		margin-block-end: 0;
	}

	.tagline {
		font-size: clamp(var(--fs-phone-h4), 3vw, var(--fs-desktop-tagline));
		font-family: Merienda;
		max-width: 22ch;
		line-height: 1.3;
		margin-block-end: 1em;
	}
</style>
